<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/padding_20"
    android:paddingRight="@dimen/padding_20">

    <RelativeLayout
        android:id="@+id/rlayoutimage"
        android:layout_width="wrap_content"
        android:layout_height="267dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="44dp"
            android:src="@drawable/login_banner" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_forpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlayoutimage"
        android:text="ForgetPassword"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        />

    <TextView
        android:id="@+id/txt_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_forpass"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/padding_20"
        android:text="Please enter your email address below to receive a password reset link"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp" />


    <LinearLayout
        android:id="@+id/editText_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/buttonstyle_round_white"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_"
        tools:ignore="RtlCompat">


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="    Email Address"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:singleLine="true"
            android:textColorHint="@color/black"
            android:textSize="13sp" />
    </LinearLayout>



    <RelativeLayout
        android:layout_below="@+id/editText_ll"
        android:id="@+id/loginlay"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_20sdp">

        <Button

            android:id="@+id/reset_btn"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/buttonstyle_round_blue"
            android:padding="5dp"
            android:text="Reset PASSWORD"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="normal" />


    </RelativeLayout>
    <!--<Button
        android:layout_below="@+id/editText_ll"
        android:id="@+id/sign_up_btn"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/buttonstyle_round_blue"
        android:padding="5dp"
        android:text="Reset PASSWORD"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="normal" />-->

</RelativeLayout>